{% extends "WinkMurderGameBundle:Common:Layout/_game.html.twig" %}

{% block pageTitle %}{{ 'profile.show.pageTitle' | trans }}{% endblock %}

{% block content %}
    <div class="user-profile">
        <img src="{{ player.photo.url }}" alt="{{ player.photo.title }}" width="60" class="profile-thumb" />
        <p class="salutation">{{ 'profile.show.heading' | trans({'%name%': player.name}) }}</p>

        <div class="manner-of-death">
            <div>{{ 'profile.show.mannerOfDeath.name' | trans}}</div>
            <div class="jollylodger type-huge highlighted">{{ player.mannerOfDeath.name }}</div>
        </div>

        <div class="profile-lang-switch mrgn-btm-24">
            <a href="{{ path('winkmurder_game_locale_set', {'_locale': otherLocale}) }}" data-ajax="false" class="lang-switch">{{ ('language.' ~ otherLocale) | trans }}</a>
        </div>
    </div>
{% endblock %}