{% extends "WinkMurderGameBundle:Layout:_game.html.twig" %}

{% block pageTitle %}{{ 'profile.show.pageTitle' | trans }}{% endblock %}

{% block content %}
    <div class="user-profile">
        <img src="{{ player.photo.url }}" alt="{{ player.photo.title }}" width="60" class="profile-thumb" />
        <p class="salutation">{{ 'profile.show.heading' | trans({'%name%': player.name}) }}</p>

        <div class="manner-of-death">
            <div>{{ 'profile.show.mannerOfDeath.name' | trans}}</div>
            <div class="jollylodger type-huge">{{ player.mannerOfDeath.name }}</div>
        </div>

        <div class="profile-lang-switch">
            <h3 class="pdng-top-12 mrgn-btm-12">{{ 'locale.switch.heading' | trans }}</h3>
            {% include "WinkMurderGameBundle:Locale:_button.html.twig" %}
        </div>
    </div>
{% endblock %}