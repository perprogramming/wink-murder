<h3>{{ 'locale.switch.heading' | trans }}</h3>

<form action="{{ path('winkmurder_game_locale_set') }}" method="post" data-ajax="false">
    <fieldset data-role="controlgroup">
        {% for locale in ['en', 'de'] %}

            {% set label = (('language.' ~ locale) | trans) %}
            {% if locale == app.session.locale %}
                <input type="radio" name="radio-choice" id="radio-choice-1" value="choice-1" checked="checked" />
                <label for="radio-choice-1">{{ label }}</label>
            {% else %}
                <input type="radio" name="radio-choice" id="radio-choice-2" value="choice-2"  />
                <label for="radio-choice-2">{{ label }}</label>
            {% endif %}

        {% endfor %}
    </fieldset>
</form>


